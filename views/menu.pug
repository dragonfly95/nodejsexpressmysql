extends include/layout

block content
  #header
  h2 #{title}

  #main
    #content  

      table
        colgroup
          col(width="300")
          col(width="400")
          col(width="600")
        tr
          td(style="vertical-align:top;border-right:1px solid #cfcfcf;")
            ul#menu1
          td(style="vertical-align:top;border-right:1px solid #cfcfcf;padding-left:20px;")
            h3 메뉴그룹
            hr
            ul#rightGroup
              li
                input.pure-button(type="button" name="btnSave" value="save") 
                input.pure-button.button-warning(type="button" name="btnDelete" value="delete") 
              li
                label(for="") MenuGroup : 
                input(type="text" name="menuGroupName" value="")
              li
                label(for="") Image : 
                form(name="frm" method="post" enctype="multipart/form-data" action="/up")
                  input(type="file" name="img" value="" accept="image/*" style="width:150px;")
                  input(type="button" name="btnFileupload" value="fileupload")
              li
                img.resource(src="" alt="")
                
          td(style="vertical-align:top;padding-left:20px;")
            h3 메뉴관리
            hr
            ul#rightMenu
              li
                label(for="") MenuGroup : 
                input(type="text" name="menuGroupName" value="")
              li
                label(for="") Menu : 
                input(type="text" name="menuName" value="")
              li
                label(for="") Image : 
                form(name="frm" method="post" enctype="multipart/form-data" action="/up")
                  input(type="file" name="img" value="" accept="image/*" style="width:150px;")
                  input(type="button" name="btnFileupload" value="fileupload")
              li
                img.resource(src="" alt="")


      script(src="/js/common.menugroup.js")
      script(src="/js/menu.js")